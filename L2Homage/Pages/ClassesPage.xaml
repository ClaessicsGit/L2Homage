                                        <TextBlock Style="{StaticResource HomagePropertyTitleText}" Text="Pledge Type" Margin="4,8,4,0"  MinWidth="178" />
                                        <TextBox x:Name="Class_Acquire_Skill_Details_Pledge_Type" Style="{StaticResource HomagePropertyTextBox}" Text="{Binding Pledge_Type, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" MinWidth="178" PreviewTextInput="Validate_Lower_Case_And_Symbols_Input" PreviewKeyDown="TextBox_No_Spaces_Allowed"/>
                                        <TextBlock Style="{StaticResource HomagePropertyTitleText}" Text="Race" Margin="4,8,4,0"  MinWidth="178" />
