                                <TextBlock Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource HomagePropertyTitleText}" Text="X" HorizontalAlignment="Center" Margin="0" MinWidth="1" VerticalAlignment="Bottom"/>
                                <TextBlock Grid.Column="4" Grid.Row="0"  Grid.ColumnSpan="2" Style="{StaticResource HomagePropertyTitleText}" Text="Y" HorizontalAlignment="Center" Margin="0" MinWidth="1" VerticalAlignment="Bottom"/>
