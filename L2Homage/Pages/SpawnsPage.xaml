                                <Button Grid.Column="2" Style="{StaticResource HomageButtonStyle}" Content="Go To" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" Height="15" Margin="2,0,2,0" Click="Raid_GoTo_Clicked" FontSize="8"/>
