                                <TextBox Grid.Column="2" Grid.Row="1" Grid.ColumnSpan="2" x:Name="Raid_Loc_X" Margin="2,0,2,0" MinWidth="10" Style="{StaticResource HomagePropertyTextBox}" Text="{Binding Loc_X, UpdateSourceTrigger=LostFocus}" PreviewTextInput="Validate_Integer_Input" PreviewKeyDown="TextBox_No_Spaces_Allowed"/>
                                <TextBox Grid.Column="4" Grid.Row="1" Grid.ColumnSpan="2" x:Name="Raid_Loc_Y" Margin="2,0,2,0" MinWidth="10" Style="{StaticResource HomagePropertyTextBox}" Text="{Binding Loc_Y, UpdateSourceTrigger=LostFocus}" PreviewTextInput="Validate_Integer_Input" PreviewKeyDown="TextBox_No_Spaces_Allowed"/>
                                <TextBox Grid.Column="6" Grid.Row="1" Grid.ColumnSpan="2" x:Name="Raid_Loc_Z" Margin="2,0,2,0" MinWidth="10" Style="{StaticResource HomagePropertyTextBox}" Text="{Binding Loc_Z, UpdateSourceTrigger=LostFocus}" PreviewTextInput="Validate_Integer_Input" PreviewKeyDown="TextBox_No_Spaces_Allowed"/>
