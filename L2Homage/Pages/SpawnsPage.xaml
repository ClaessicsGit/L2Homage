<Page x:Class="L2Homage.Pages.SpawnsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:L2Homage.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="850" d:DesignWidth="1220"
      Title="SpawnsPage">

    <Grid>
        <Grid x:Name="Spawns_Zone_Selection_Overview_Grid" Visibility="Hidden">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition MinWidth="660" MaxWidth="{Binding MaxHeight,ElementName=Spawns_Zone_Selection_Grid }"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="2" Style="{StaticResource HomageLoadedText}" Text="World Zone Selection" Margin="0" HorizontalAlignment="Center" FontSize="16" VerticalAlignment="Center"/>

            <Grid x:Name="Spawns_Zone_Selection_Grid"  Grid.Column="2" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Viewbox Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Top" MaxHeight="{Binding ActualHeight, ElementName=Spawns_Zone_Shortcuts_Panel}" >
                    <Grid>
                        <StackPanel Orientation="Vertical">
                            <StackPanel x:Name="Image_Row_0" Orientation="Horizontal">
                            </StackPanel>
                            <StackPanel x:Name="Image_Row_1" Orientation="Horizontal">
                            </StackPanel>
                            <StackPanel x:Name="Image_Row_2" Orientation="Horizontal">
                            </StackPanel>
                            <StackPanel x:Name="Image_Row_3" Orientation="Horizontal">
                            </StackPanel>
                            <StackPanel x:Name="Image_Row_4" Orientation="Horizontal">
                            </StackPanel>
                            <StackPanel x:Name="Image_Row_5" Orientation="Horizontal">
                            </StackPanel>
                            <StackPanel x:Name="Image_Row_6" Orientation="Horizontal">
                            </StackPanel>
                            <StackPanel x:Name="Image_Row_7" Orientation="Horizontal">
                            </StackPanel>
                            <StackPanel x:Name="Image_Row_8" Orientation="Horizontal">
                            </StackPanel>
                            <StackPanel x:Name="Image_Row_9" Orientation="Horizontal">
                            </StackPanel>
                            <StackPanel x:Name="Image_Row_10" Orientation="Horizontal">
                            </StackPanel>
                            <StackPanel x:Name="Image_Row_11" Orientation="Horizontal">
                            </StackPanel>
                            <StackPanel x:Name="Image_Row_12" Orientation="Horizontal">
                            </StackPanel>
                            <StackPanel x:Name="Image_Row_13" Orientation="Horizontal">
                            </StackPanel>
                            <StackPanel x:Name="Image_Row_14" Orientation="Horizontal">
                            </StackPanel>
                            <StackPanel x:Name="Image_Row_15" Orientation="Horizontal">
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                </Viewbox>
            </Grid>
            <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Style="{StaticResource HomageLoadedText}" Text="Preview" Margin="0" HorizontalAlignment="Stretch" TextAlignment="Center" FontSize="16" VerticalAlignment="Center"/>

                    <Border Grid.Row="1" BorderThickness="0,0,1,0" BorderBrush="#4f4f4f">
                    </Border>
                    <Grid Grid.Row="1"  VerticalAlignment="Stretch" Height="2160">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="256"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Image x:Name="Spawns_Zone_Preview_Image" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="Spawns_Zone_Preview_Name" Grid.Row="1" Style="{StaticResource HomageLoadedText}" Text="" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock x:Name="Spawns_Zone_Preview_Layers_Text" Grid.Row="2" Style="{StaticResource HomageLoadedText}" Text="Sub Layers" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Hidden"/>

                        <WrapPanel x:Name="Spawns_Zone_Preview_Layers_Panel" Grid.Row="3" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalAlignment="Center"/>

                    </Grid>
                </Grid>
            </Border>

            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource HomageLoadedText}" Text="Shortcuts" Margin="0,0,10,0" HorizontalAlignment="Stretch" TextAlignment="Center" FontSize="16" VerticalAlignment="Center"/>
            <Grid x:Name="Spawns_Zone_Shortcuts_Panel" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <ListView x:Name="Spawns_Zone_Shortcuts_Listview" Grid.Row="1" Background="Transparent" BorderBrush="#4f4f4f" BorderThickness="0,0,1,0" Margin="4,0,4,0" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalContentAlignment="Stretch" Focusable="False" SelectionMode="Single" ScrollViewer.VerticalScrollBarVisibility="Visible" Visibility="Visible">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource HomageButtonStyle}" Margin="4,4,12,4" Height="30" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Focusable="False" Click="Spawns_Zone_Shortcut_Clicked" MouseEnter="Spawns_Zone_Shortcut_Mouse_Over">
                                <Button.Content>
                                    <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Style="{StaticResource HomageLoadedText}" Text="{Binding Shortcut_Name}" />
                                </Button.Content>
                            </Button>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="{x:Type ListViewItem}">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>

            </Grid>

        </Grid>
        <Grid x:Name="Spawns_Zone_Details_Grid" Visibility="Visible" Margin="0,0,0,10" SizeChanged="Spawns_Zone_Details_Grid_SizeChanged">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition />
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Grid.Column="0" Style="{StaticResource HomageButtonStyle}" MinWidth="50" Height="25" Content=" ← Back to Map  " HorizontalAlignment="Left" VerticalContentAlignment="Center" Click="Spawns_Zone_Details_Grid_Back_Clicked" Margin="4,4,4,4"/>

            <TextBlock Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource HomageLoadedText}" Text="Zone Details" Margin="0" HorizontalAlignment="Center" FontSize="16" VerticalAlignment="Center"/>
            <TextBlock Name="Top_Right_Title" Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="2" Style="{StaticResource HomageLoadedText}" Text="NPC Maker Spawns" Margin="0" HorizontalAlignment="Center" FontSize="16" VerticalAlignment="Center"/>

            <!--#region Togglebuttons-->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <ToggleButton x:Name="Zone_Type_Toggle_Spawn_Areas" Grid.Column="0" Grid.Row="1" Style="{StaticResource HomageToggleFilterButton}" MinWidth="50" Height="36" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" VerticalAlignment="Stretch" Margin="2,0,2,0" Click="Zone_Type_Clicked" Tag="spawn" IsChecked="True">
                    <ToggleButton.Content>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <TextBlock Text="Spawn" HorizontalAlignment="Center"/>
                            <TextBlock Text="Areas" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </ToggleButton.Content>
                </ToggleButton>
                <ToggleButton x:Name="Zone_Type_Toggle_Huntingzones" Grid.Column="1" Grid.Row="1" Style="{StaticResource HomageToggleFilterButton}" MinWidth="50" Height="36" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" VerticalAlignment="Stretch" Margin="2,0,2,0" Click="Zone_Type_Clicked" Tag="hunting">
                    <ToggleButton.Content>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <TextBlock Text="Hunting" HorizontalAlignment="Center"/>
                            <TextBlock Text="Zones" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </ToggleButton.Content>
                </ToggleButton>
                <ToggleButton x:Name="Zone_Type_Toggle_Zonenames" Grid.Column="2" Grid.Row="1" Style="{StaticResource HomageToggleFilterButton}" MinWidth="50" Height="36" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" VerticalAlignment="Stretch" Margin="2,0,2,0" Click="Zone_Type_Clicked" Tag="names">
                    <ToggleButton.Content>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <TextBlock Text="Zone" HorizontalAlignment="Center"/>
                            <TextBlock Text="Names" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </ToggleButton.Content>
                </ToggleButton>
                <ToggleButton x:Name="Zone_Type_Toggle_Raids" Grid.Column="3" Grid.Row="1" Style="{StaticResource HomageToggleFilterButton}" MinWidth="50" Height="36" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" VerticalAlignment="Stretch" Margin="2,0,2,0" Click="Zone_Type_Clicked" Tag="raids">
                    <ToggleButton.Content>
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <TextBlock Text="Raids" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </ToggleButton.Content>
                </ToggleButton>

            </Grid>

            <!--#region Region Layers-->
            <Border Grid.Column="1" Grid.Row="2" MaxWidth="102" BorderBrush="#4f4f4f" BorderThickness="0,0,0,0" HorizontalAlignment="Left">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource HomageLoadedText}" Text="Layers" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <ListView x:Name="Spawns_Zone_Details_Grid_Layers_ListView" Grid.Column="0" Grid.Row="1" Margin="0,0,0,0" Background="Transparent" BorderBrush="#4f4f4f" BorderThickness="0,0,0,0" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Focusable="False" SelectionMode="Single" ScrollViewer.VerticalScrollBarVisibility="Hidden" Visibility="Visible">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ToggleButton Style="{StaticResource HomageToggleFilterButton}" Margin="0" Height="48" BorderBrush="#4f4f4f" BorderThickness="0,0,1,0" VerticalContentAlignment="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Focusable="False" IsChecked="{Binding IsSelected}" Click="Spawn_Area_Layer_Clicked">
                                    <ToggleButton.Content>
                                        <Image Source="{Binding Image}" MaxHeight="48" Margin="0"/>
                                    </ToggleButton.Content>
                                </ToggleButton>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="{x:Type ListViewItem}">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListViewItem}">
                                            <ContentPresenter />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>

                </Grid>
            </Border>
            <!--#region Canvas and Image-->
            <Grid Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition MaxHeight="300"/>
                </Grid.RowDefinitions>

                <Grid x:Name="Spawns_Zone_Details_Grid_Image_Grid" Margin="53,0,0,0" Grid.Row="0">

                    <Image x:Name="Spawns_Zone_Details_Grid_Image" Source="pack://application:,,,/L2Homage;component/Images/ImageNotFound.png" VerticalAlignment="Center"/>
                    <Canvas x:Name="Spawns_Zone_Canvas" Height="{Binding ActualHeight, ElementName=Spawns_Zone_Details_Grid_Image}" Width="{Binding ActualWidth, ElementName=Spawns_Zone_Details_Grid_Image}" Visibility="Hidden">

                        <Polygon x:Name="Spawns_Zone_Details_Grid_Image_Polygon_Preview" Stroke="Black" StrokeThickness="1" Fill="Red" Opacity="0.6"/>
                        <Polygon x:Name="Spawns_Zone_Details_Grid_Image_Polygon_Selected" Stroke="Black" StrokeThickness="1" Fill="#FF255BCF" Opacity="0.6"/>
                        <Polygon x:Name="Spawns_Zone_Details_Grid_Image_Polygon_Preview_Arrow"  Stroke="Black" StrokeThickness="2" Fill="Red" Opacity="0.8"/>
                        <Polygon x:Name="Spawns_Zone_Details_Grid_Image_Polygon_Selected_Arrow" Stroke="Black" StrokeThickness="2" Fill="#FF255BCF" Opacity="0.8"/>
                        
                    </Canvas>
                    <Canvas x:Name="Huntingzone_Canvas" Height="{Binding ActualHeight, ElementName=Spawns_Zone_Details_Grid_Image}" Width="{Binding ActualWidth, ElementName=Spawns_Zone_Details_Grid_Image}" Visibility="Visible">

                        <Polygon x:Name="Huntingzone_Details_Grid_Image_Polygon_Preview" Stroke="Black" StrokeThickness="1" Fill="Red" Opacity="0.6"/>
                        <Polygon x:Name="Huntingzone_Details_Grid_Image_Polygon_Selected" Stroke="Black" StrokeThickness="1" Fill="#FF255BCF" Opacity="0.6"/>
                        <Polygon x:Name="Huntingzone_Details_Grid_Image_Polygon_Preview_Arrow"  Stroke="Black" StrokeThickness="2" Fill="Red" Opacity="0.8"/>
                        <Polygon x:Name="Huntingzone_Details_Grid_Image_Selected_Arrow" Stroke="Black" StrokeThickness="2" Fill="#FF255BCF" Opacity="0.8"/>


                    </Canvas>
                    <Canvas x:Name="Zonename_Canvas" Height="{Binding ActualHeight, ElementName=Spawns_Zone_Details_Grid_Image}" Width="{Binding ActualWidth, ElementName=Spawns_Zone_Details_Grid_Image}" Visibility="Hidden">

                        <Polygon x:Name="Zonename_Details_Grid_Image_Polygon_Preview" Stroke="Black" StrokeThickness="1" Fill="Red" Opacity="0.6"/>
                        <Polygon x:Name="Zonename_Details_Grid_Image_Polygon_Selected" Stroke="Black" StrokeThickness="1" Fill="#FF255BCF" Opacity="0.6"/>
                        <Polygon x:Name="Zonename_Details_Grid_Image_Polygon_Preview_Arrow"  Stroke="Black" StrokeThickness="2" Fill="Red" Opacity="0.8"/>
                        <Polygon x:Name="Zonename_Details_Grid_Image_Selected_Arrow" Stroke="Black" StrokeThickness="2" Fill="#FF255BCF" Opacity="0.8"/>

                    </Canvas>
                    <Canvas x:Name="Raid_Canvas" Height="{Binding ActualHeight, ElementName=Spawns_Zone_Details_Grid_Image}" Width="{Binding ActualWidth, ElementName=Spawns_Zone_Details_Grid_Image}" Visibility="Hidden">

                        <Polygon x:Name="Raid_Details_Grid_Image_Polygon_Preview" Stroke="Black" StrokeThickness="1" Fill="Red" Opacity="0.6"/>
                        <Polygon x:Name="Raid_Details_Grid_Image_Polygon_Selected" Stroke="Black" StrokeThickness="1" Fill="#FF255BCF" Opacity="0.6"/>
                        <Polygon x:Name="Raid_Details_Grid_Image_Polygon_Preview_Arrow"  Stroke="Black" StrokeThickness="2" Fill="Red" Opacity="0.8"/>
                        <Polygon x:Name="Raid_Details_Grid_Image_Selected_Arrow" Stroke="Black" StrokeThickness="2" Fill="#FF255BCF" Opacity="0.8"/>

                    </Canvas>
                </Grid>
                <!--#region Bottom Middle Spawn Makers Grid-->
                <Grid Name="Spawn_Makers_Grid" Grid.Row="1" Visibility="Hidden">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource HomageLoadedText}" Text="NPC Makers" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <Grid Grid.Column="0" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="40"/>
                        </Grid.RowDefinitions>



                        <ListView x:Name="Spawns_Zone_Details_Grid_Spawn_NPC_Makers_Listview" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Margin="0,0,2,0" Background="Transparent" BorderBrush="#4f4f4f" BorderThickness="0,0,1,0" ScrollViewer.HorizontalScrollBarVisibility="Hidden" Focusable="False" SelectionMode="Single" ScrollViewer.VerticalScrollBarVisibility="Visible" Visibility="Visible">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ToggleButton Style="{StaticResource HomageToggleFilterButton}" Margin="4,4,12,4" Height="40" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Focusable="False" IsChecked="{Binding IsSelected}" Click="Spawn_NPC_Maker_Clicked">
                                        <ToggleButton.Content>
                                            <TextBlock Margin="0" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Style="{StaticResource HomageLoadedText}" Text="{Binding Maker_Name}"/>
                                        </ToggleButton.Content>
                                    </ToggleButton>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="{x:Type ListViewItem}">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ListViewItem}">
                                                <ContentPresenter />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                        <Button Grid.Column="0" Grid.Row="2" Style="{StaticResource HomageButtonStyle}" MinWidth="50" Height="25" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" Margin="4,4,4,4" Click="Spawn_NPC_Maker_Add_Basic_Clicked">
                            <Button.Content>
                                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource HomageLoadedText}" Text="Add Basic" Margin="0,1,0,0" VerticalAlignment="Center"/>
                                    <TextBlock Style="{StaticResource HomageLoadedText}" Text="Maker" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>

                        <Button Grid.Column="1" Grid.Row="2" Style="{StaticResource HomageButtonStyle}" MinWidth="50" Height="25" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" Margin="4,4,4,4" Click="Spawn_NPC_Maker_Add_Extended_Clicked">
                            <Button.Content>
                                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                                    <TextBlock Style="{StaticResource HomageLoadedText}" Text="Add Extended" Margin="0,1,0,0" VerticalAlignment="Center"/>
                                    <TextBlock Style="{StaticResource HomageLoadedText}" Text="Maker" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button.Content>
                        </Button>

                        <Button Grid.Column="2" Grid.Row="2" Style="{StaticResource HomageButtonStyle}" MinWidth="50" Height="25" Content="Delete Maker" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" Margin="4,4,4,4" Click="Spawn_NPC_Maker_Remove_Clicked"/>
                    </Grid>


                    <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource HomageLoadedText}" Text="NPC Maker Parameters" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>


                    <Grid x:Name="Spawns_Zone_Details_Grid_NPC_Maker_Parameters_Panel_Overview" Grid.Column="1" Grid.Row="1" Visibility="Hidden">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Column="0" Style="{StaticResource HomagePropertyTitleText}" Text="Maker Type" Margin="4,0,2,0" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" x:Name="Spawns_Zone_Details_Grid_NPC_Maker_Type" Style="{StaticResource HomagePropertyTextBox}" Margin="2,0,4,0" IsReadOnly="True" Text="{Binding Maker_Type, Mode=OneWay}"/>

                        <Border x:Name="Spawns_Zone_Details_Grid_NPC_Maker_Parameters_Panel" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" BorderThickness="0,0,0,0" BorderBrush="#4f4f4f" Visibility="Hidden">
                            <StackPanel Orientation="Vertical">
                                <Grid VerticalAlignment="Top" Margin="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Style="{StaticResource HomagePropertyTitleText}" Text="Initial Spawns" Margin="2,0,2,0" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" x:Name="Spawns_Zone_Details_Grid_NPC_Maker_Initial_Spawn" Style="{StaticResource HomagePropertyTextBox}" Margin="2,0,2,0" Text="{Binding Maker_Initial_Spawns}" PreviewTextInput="Validate_Integer_Input" PreviewKeyDown="TextBox_No_Spaces_Allowed"/>
                                </Grid>
                                <Grid VerticalAlignment="Top" Margin="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Style="{StaticResource HomagePropertyTitleText}" Text="Spawn Time" Margin="2,0,2,0" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" x:Name="Spawns_Zone_Details_Grid_NPC_Maker_Spawn_Time" Style="{StaticResource HomagePropertyTextBox}" Margin="2,0,2,0" Text="{Binding Maker_Spawn_Time}" PreviewTextInput="Validate_Lower_Case_And_Symbols_Input" PreviewKeyDown="TextBox_No_Spaces_Allowed"/>
                                </Grid>
                                <Grid VerticalAlignment="Top" Margin="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Style="{StaticResource HomagePropertyTitleText}" Text="Max Spawns" Margin="2,0,2,0" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" x:Name="Spawns_Zone_Details_Grid_NPC_Maker_Max_Spawns" Style="{StaticResource HomagePropertyTextBox}" Margin="2,0,2,0" Text="{Binding Maker_Max_Spawns}" PreviewTextInput="Validate_Integer_Input" PreviewKeyDown="TextBox_No_Spaces_Allowed"/>
                                </Grid>
                                <Grid VerticalAlignment="Top" Margin="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Style="{StaticResource HomagePropertyTitleText}" Text="Event Name" Margin="2,0,2,0" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" x:Name="Spawns_Zone_Details_Grid_NPC_Maker_Event_Name" Style="{StaticResource HomagePropertyTextBox}" Margin="2,0,2,0" Text="{Binding Maker_Event_Name}" PreviewTextInput="Validate_Lower_Case_And_Symbols_Input" PreviewKeyDown="TextBox_No_Spaces_Allowed"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <Border x:Name="Spawns_Zone_Details_Grid_NPC_Maker_Ex_Parameters_Panel" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2" BorderThickness="0,0,0,0" BorderBrush="#4f4f4f" Visibility="Hidden">
                            <StackPanel Orientation="Vertical">
                                <Grid VerticalAlignment="Top" Margin="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Style="{StaticResource HomagePropertyTitleText}" Text="Name" Margin="2,0,2,0" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" x:Name="Spawns_Zone_Details_Grid_Spawn_Area_Parameter_Name" Style="{StaticResource HomagePropertyTextBox}" Margin="2,0,2,0" Text="{Binding Maker_Name}" PreviewTextInput="Validate_Lower_Case_And_Symbols_Input" PreviewKeyDown="TextBox_No_Spaces_Allowed"/>
                                </Grid>

                                <Grid VerticalAlignment="Top" Margin="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Style="{StaticResource HomagePropertyTitleText}" Text="Max Spawns" Margin="2,0,2,0" VerticalAlignment="Center"/>
                                    <TextBox Grid.Column="1" x:Name="Spawns_Zone_Details_Grid_Spawn_Area_Parameter_Max_Spawns" Margin="2,0,2,0" Style="{StaticResource HomagePropertyTextBox}" Text="{Binding Maker_Max_Spawns}" PreviewTextInput="Validate_Integer_Input" PreviewKeyDown="TextBox_No_Spaces_Allowed"/>
                                </Grid>
                                <Grid VerticalAlignment="Top" Margin="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Style="{StaticResource HomagePropertyTitleText}" Text="AI" Margin="2,0,2,0" VerticalAlignment="Center"/>
