<Page x:Class="L2Homage.Pages.SkillsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:L2Homage.Pages"
      mc:Ignorable="d"       
      d:DesignHeight="850" d:DesignWidth="1260"
      Title="SkillsPage">

    <Grid x:Name="Skills_Main_Grid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Loaded="Skill_Force_Select_Waiting">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="00"/>
            <RowDefinition Height="30"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0" Width="130" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Lucida Console" Foreground="#F2F2F2" FontSize="14" Focusable="False">Search</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="1" Margin="0" Width="130" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Lucida Console" Foreground="#F2F2F2" FontSize="14" Focusable="False">Name</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="2" Margin="0" Width="130" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Lucida Console" Foreground="#F2F2F2" FontSize="14" Focusable="False">Details</TextBlock>

        <Button x:Name="SearchIsShowingButton" Grid.Column="2" Grid.Row="1" Width="100" HorizontalAlignment="Left" Style="{StaticResource HomageButtonStyle}" Height="20" Content="Hide Search" Click="ToggleSearchVisibility"></Button>

        <Border  Grid.Row="2" Grid.Column="0" BorderBrush="#4f4f4f" BorderThickness="0,0,1,0">
            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Vertical" Grid.Row="0">
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,4">
                        <TextBlock Text="ID" Width="90" Style="{StaticResource HomageLoadedText}" Margin="10,4,4,4" TextAlignment="Left" VerticalAlignment="Center"/>
                        <TextBox x:Name="Skill_Filter_ID" Width="106" HorizontalAlignment="Right" Style="{StaticResource HomageTextBox}" TextAlignment="Left" VerticalContentAlignment="Center" Padding="2,-2,0,0" Text="" TextChanged="Skill_Filter_Changed"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,4">
                        <TextBlock Text="Name" Width="90" Style="{StaticResource HomageLoadedText}" Margin="10,4,4,4" TextAlignment="Left" VerticalAlignment="Center"/>
                        <TextBox x:Name="Skill_Filter_Name" Width="106" HorizontalAlignment="Right" Style="{StaticResource HomageTextBox}" TextAlignment="Left" VerticalContentAlignment="Center" Padding="2,-2,0,0" Text="" TextChanged="Skill_Filter_Changed"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,4,0,4">
                        <TextBlock Text="Only Custom" Width="120" Style="{StaticResource HomageLoadedText}" Margin="10,4,4,4" TextAlignment="Left" VerticalAlignment="Center"/>
                        <ToggleButton x:Name="Skill_Filter_Custom_Toggle" Style="{StaticResource HomageToggleButton}" Margin="60,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Right" Click="Skill_Filter_Changed"/>
                    </StackPanel>
                    <ToggleButton x:Name="Skill_Filter_Skill_Type_All" Style="{StaticResource HomageToggleFilterButton}" FontFamily="Lucida Console" FontSize="12" Content="All" HorizontalAlignment="Stretch" Height="25" Margin="10,0,9,8" IsChecked="True" Click="Skill_Type_Clicked"/>
                    <ToggleButton x:Name="Skill_Filter_Skill_Type_Active" Style="{StaticResource HomageToggleFilterButton}" Content="Active" HorizontalAlignment="Stretch" Height="25" Margin="10,0,9,8" Click="Skill_Type_Clicked"/>
                    <ToggleButton x:Name="Skill_Filter_Skill_Type_Passive" Style="{StaticResource HomageToggleFilterButton}" Content="Passive" HorizontalAlignment="Stretch" Height="25" Margin="10,0,9,8" Click="Skill_Type_Clicked"/>
                    <ToggleButton x:Name="Skill_Filter_Skill_Type_Toggle" Style="{StaticResource HomageToggleFilterButton}" Content="Toggle" HorizontalAlignment="Stretch" Height="25" Margin="10,0,9,8" Click="Skill_Type_Clicked"/>
                </StackPanel>
            </Grid>
        </Border>
        <ListView x:Name="Skills_Name_Listview" Grid.Column="1" Grid.Row="2" Background="Transparent" BorderBrush="#4f4f4f" BorderThickness="0,0,1,0" ScrollViewer.HorizontalScrollBarVisibility="Hidden" Focusable="False" SelectionMode="Single" ScrollViewer.VerticalScrollBarVisibility="Visible" Visibility="Visible">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ToggleButton Style="{StaticResource HomageToggleFilterButton}" Margin="4,4,12,4" Height="40" Width="188"  VerticalContentAlignment="Center" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Focusable="False" IsChecked="{Binding IsSelected}" Click="Skill_Name_Clicked">
                        <ToggleButton.Content>
                            <TextBlock Margin="20,0,20,0" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Style="{StaticResource HomageLoadedText}" Text="{Binding Instance}"/>
                        </ToggleButton.Content>
                    </ToggleButton>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ListViewItem}">
                                <ContentPresenter />
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <Grid x:Name="Skills_Details_Grid" Grid.Row="2" Grid.Column="2" Grid.RowSpan="3" Margin="5,5,5,5" Visibility="Hidden">

            <Grid.ColumnDefinitions>
                <ColumnDefinition MaxWidth="220"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="1" Grid.Row="0" Text="Preview" Style="{StaticResource HomageLoadedText}" Margin="0,0,0,0" TextAlignment="Center" VerticalAlignment="Center"/>
            <TextBlock Grid.Column="2" Grid.Row="0" Text="Base" Style="{StaticResource HomageLoadedText}" Margin="0,0,0,0" TextAlignment="Center" VerticalAlignment="Center"/>
            <Border Grid.Row="0" Grid.RowSpan="2" BorderThickness="0,0,1,1">
                <Grid>
                    <Grid.ColumnDefinitions>

                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition MaxHeight="120"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="0" Text="Variants" Style="{StaticResource HomageLoadedText}" Margin="0,0,0,0" TextAlignment="Center" VerticalAlignment="Center"/>
                    <ListView x:Name="Skill_Variants_Listview" Grid.Column="1" Grid.Row="1" MinHeight="120" Background="Transparent" BorderBrush="#4f4f4f" BorderThickness="0,0,1,0" ScrollViewer.HorizontalScrollBarVisibility="Hidden" Focusable="False" SelectionMode="Single" ScrollViewer.VerticalScrollBarVisibility="Visible" Visibility="Visible">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ToggleButton Style="{StaticResource HomageToggleFilterButton}" Margin="4,4,12,4" Height="40" Width="188"  VerticalContentAlignment="Center" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Focusable="False" IsChecked="{Binding IsSelected}" Click="Skill_Variant_Clicked">
                                    <ToggleButton.Content>
                                        <TextBlock Margin="20,0,20,0" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Style="{StaticResource HomageLoadedText}" Text="{Binding Variant_Name}"/>
                                    </ToggleButton.Content>
                                </ToggleButton>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="{x:Type ListViewItem}">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListViewItem}">
                                            <ContentPresenter />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                    <TextBlock Grid.Column="0" Grid.Row="2" Text="Levels" Style="{StaticResource HomageLoadedText}" Margin="0,0,0,0" TextAlignment="Center" VerticalAlignment="Center"/>
                    <ListView x:Name="Skill_Levels_Listview" Grid.Column="1" Grid.Row="3" Background="Transparent" BorderBrush="#4f4f4f" BorderThickness="0,0,1,0" ScrollViewer.HorizontalScrollBarVisibility="Hidden" Focusable="False" SelectionMode="Single" ScrollViewer.VerticalScrollBarVisibility="Visible" Visibility="Visible">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ToggleButton Style="{StaticResource HomageToggleFilterButton}" Margin="4,4,12,4" Height="40" Width="188"  VerticalContentAlignment="Center" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Focusable="False" IsChecked="{Binding IsSelected}" Click="Skill_Level_Clicked">
                                    <ToggleButton.Content>
                                        <TextBlock Margin="20,0,20,0" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Style="{StaticResource HomageLoadedText}" Text="{Binding Name_And_Level}"/>
                                    </ToggleButton.Content>
                                </ToggleButton>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="{x:Type ListViewItem}">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListViewItem}">
                                            <ContentPresenter />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>

                    <Button x:Name="Skills_Details_Grid_Skill_Add_Level_Button" Grid.Row="4" Style="{StaticResource HomageButtonStyle}" Margin="4,0,4,0" HorizontalAlignment="Stretch" FontFamily="Lucida_Console" HorizontalContentAlignment="Center" Height="25" Content="Add Levels" Visibility="Visible" Click="Skill_Add_Levels_Clicked"/>

                </Grid>
            </Border>
            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition MaxHeight="40"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderBrush="#4f4f4f" BorderThickness="0,0,1,0"/>

                <Grid Grid.Row="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition MinHeight="128" MaxHeight="256"/>
                        <RowDefinition Height="180"/>

                    </Grid.RowDefinitions>
                    <TextBlock x:Name="Skill_Details_Preview_Name" Text="{Binding Skill_Name, Mode=OneWay, UpdateSourceTrigger=LostFocus}" Style="{StaticResource HomageLoadedText}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" MaxWidth="184" TextAlignment="Center" TextWrapping="Wrap" Margin="0"/>
                    <Image x:Name="Skill_Details_Preview_Icon" Grid.Column="0" Grid.Row="1" Source="pack://application:,,,/L2Homage;component/Images/ImageNotFound.png" Width="128" Height="128" VerticalAlignment="Center"/>

                    <TextBox x:Name="Skill_Details_Skill_Preview_Description" MinWidth="220" MinHeight="160" Width="220" Height="160" Focusable="true" Style="{StaticResource HomageTextBox}" Grid.Row="3" Background="#1f1f1f" Foreground="#f2f2f2" Text="{Binding Skill_Description}" TextAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" FontSize="12" FontFamily="lucida console" BorderThickness="0" TextWrapping="Wrap"/>

                </Grid>

                <TextBlock Grid.Column="0" Grid.Row="1" Text="Property Categories" Style="{StaticResource HomageLoadedText}" Margin="0,0,0,0" TextAlignment="Center" VerticalAlignment="Center"/>
                <Border Grid.Column="0" Grid.Row="2" BorderBrush="#4f4f4f" BorderThickness="0,0,1,0"></Border>
                <StackPanel Grid.Row="2" Orientation="Vertical">
                    <ToggleButton Style="{StaticResource HomageToggleFilterButton}" MaxHeight="40" MinHeight="40" HorizontalAlignment="Stretch" Content="Casting" Margin="4,2,4,2" Tag="casting" Click="Skill_Property_Category_Clicked"/>
                    <ToggleButton Style="{StaticResource HomageToggleFilterButton}" MaxHeight="40" MinHeight="40" HorizontalAlignment="Stretch" Content="Targeting" Margin="4,2,4,2" Tag="targeting" Click="Skill_Property_Category_Clicked"/>
                    <ToggleButton Style="{StaticResource HomageToggleFilterButton}" MaxHeight="40" MinHeight="40" HorizontalAlignment="Stretch" Content="Effects" Margin="4,2,4,2" Tag="effects" Click="Skill_Property_Category_Clicked"/>
                    <ToggleButton Style="{StaticResource HomageToggleFilterButton}" MaxHeight="40" MinHeight="40" HorizontalAlignment="Stretch" Content="Buffs/Debuffs" Margin="4,2,4,2" Tag="buffs" Click="Skill_Property_Category_Clicked"/>
                    <ToggleButton Style="{StaticResource HomageToggleFilterButton}" MaxHeight="40" MinHeight="40" HorizontalAlignment="Stretch" Content="Conditions" Margin="4,2,4,2" Tag="conditions" Click="Skill_Property_Category_Clicked"/>
                    <ToggleButton Style="{StaticResource HomageToggleFilterButton}" MaxHeight="40" MinHeight="40" HorizontalAlignment="Stretch" Content="Misc" Margin="4,2,4,2" Tag="misc" Click="Skill_Property_Category_Clicked"/>
                    <ToggleButton Style="{StaticResource HomageToggleFilterButton}" MaxHeight="40" MinHeight="40" HorizontalAlignment="Stretch" Content="Enchanted" Margin="4,8,4,2" Tag="enchanted" Click="Skill_Property_Category_Clicked" IsEnabled="{Binding IsChecked, ElementName=Skill_Details_Property_Toggle_Is_Enchanted, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

            </Grid>
            <Grid Grid.Column="2" Grid.Row="1" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition MaxHeight="40"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Text="Properties" Style="{StaticResource HomageLoadedText}" Margin="0,0,0,0" TextAlignment="Center" VerticalAlignment="Center"/>
                <StackPanel Orientation="Vertical">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Style="{StaticResource HomageButtonStyle}" MinWidth="50" Height="25" Content="Clone" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" Margin="4,4,4,4" Click="Skill_Clone_Clicked"/>
                        <Button Grid.Column="1" Style="{StaticResource HomageButtonStyle}" MinWidth="50" Height="25" Content="Batch" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" Margin="4,4,4,4" Click="Skill_Batch_Clicked"/>
                        <Button Grid.Column="2" Style="{StaticResource HomageButtonStyle}" MinWidth="50" Height="25" Content="Delete" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" Margin="4,4,4,4" Click="Skill_Delete_Clicked"/>
                    </Grid>

                    <Grid Margin="2,0,2,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition MinHeight="15"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Column="0" Style="{StaticResource HomagePropertyTitleText}" MinWidth="80" Margin="4,2,2,0" Text="ID"/>
                        <TextBox Grid.Row="1" x:Name="Skill_Details_Property_ID" Style="{StaticResource HomagePropertyTextBox}"  Margin="2,0,2,0" MinWidth="87" IsReadOnly="True" Text="{Binding Skill_ID, Mode=OneWay}" />
                        <TextBlock Grid.Column="1" Style="{StaticResource HomagePropertyTitleText}"  MinWidth="80" Margin="4,2,0,0" Text="Template"/>
                        <TextBox Grid.Column="1" Grid.Row="1" x:Name="Skill_Details_Property_Template" Style="{StaticResource HomagePropertyTextBox}" Margin="2,0,2,0" MinWidth="87" IsReadOnly="True" />

                    </Grid>
                    <Grid Margin="2,0,2,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition MinHeight="15"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Column="0" Style="{StaticResource HomagePropertyTitleText}" MinWidth="80" Margin="4,2,2,0" Text="Name ID"/>
                        <TextBox Grid.Row="1" x:Name="Skill_Details_Property_Name_ID" Style="{StaticResource HomagePropertyTextBox}"  Margin="2,0,2,0" MinWidth="87" Text="{Binding Skill_Name_ID, Mode=OneWay}" />
                        <TextBlock Grid.Column="1" Style="{StaticResource HomagePropertyTitleText}"  MinWidth="80" Margin="4,2,0,0" Text="In-Game Name"/>
                        <TextBox Grid.Column="1" Grid.Row="1" x:Name="Skill_Details_Property_Name" Style="{StaticResource HomagePropertyTextBox}" Margin="2,0,2,0" MinWidth="87" Text="{Binding Skill_Name, UpdateSourceTrigger=LostFocus}" />

                    </Grid>
                    <Grid Margin="2,0,2,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition MinHeight="15"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Column="0" Style="{StaticResource HomagePropertyTitleText}" MinWidth="80" Margin="4,2,2,0" Text="Level"/>
                        <TextBox Grid.Row="1" x:Name="Skill_Details_Property_Level" Style="{StaticResource HomagePropertyTextBox}"  Margin="2,0,2,0" MinWidth="87" IsReadOnly="True" Text="{Binding Skill_Level, Mode=OneWay}" />

                        <TextBlock Grid.Column="1" Style="{StaticResource HomagePropertyTitleText}" MinWidth="80" Margin="4,2,2,0" Text="Client Category"/>
                        <ComboBox Grid.Column="1" Grid.Row="11" x:Name="Skill_Details_Property_Client_Operate_Type" Margin="2,0,2,0" Style="{DynamicResource HomageDropdownBoxStyle}" Background="#4f4f4f" SelectedIndex="{Binding Skill_Client_Operate_Type}" Height="15" FontSize="10" FontFamily="Lucida Console" BorderThickness="0">

                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="{x:Type ComboBoxItem}">
                                    <Setter Property="Background" Value="#2f2f2f"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                            <ComboBox.Items>
                                <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="0 - Physical"/>
                                <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="1 - Magic"/>
                                <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="2 - Buff"/>
                                <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="3 - Debuff"/>
                                <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="4 - Noblesse"/>
                                <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="5 - Item"/>
                                <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="6 - Toggle"/>
                                <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="7 - Transform"/>
                                <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="8"/>
                                <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="9"/>
                                <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="10"/>
                                <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="11"/>
                                <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="12"/>
                                <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="13 - Limit"/>
                                <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="14 - Trigger"/>
                                <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="15 - Talisman"/>
                                <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="16 - Set Bonus"/>
                            </ComboBox.Items>
                        </ComboBox>

                    </Grid>
                    <Grid Margin="2,0,2,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition MinHeight="15"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.RowSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="1" Grid.Row="0" Style="{StaticResource HomagePropertyTitleText}" Text="Magic Skill" MinWidth="162" TextAlignment="Left" VerticalAlignment="Bottom" Margin="4,0,0,2"/>
                            <ToggleButton Grid.Column="0" Grid.Row="0" x:Name="Skill_Details_Property_Toggle_Is_Magic" Style="{StaticResource HomageToggleButton}" HorizontalAlignment="Center" VerticalAlignment="Bottom" IsChecked="{Binding Skill_Is_Magic}" Margin="0,0,0,0"/>
                        </Grid>

                        <TextBlock Grid.Column="1" Style="{StaticResource HomagePropertyTitleText}" MinWidth="80" Margin="4,2,2,0" Text="Magic Level"/>
                        <TextBox Grid.Column="1" Grid.Row="1" x:Name="Skill_Details_Property_Magic_Level" Style="{StaticResource HomagePropertyTextBox}"  Margin="2,0,2,0" MinWidth="87" Text="{Binding Skill_Magic_Level, UpdateSourceTrigger=LostFocus}"  PreviewTextInput="Validate_Integer_Input" PreviewKeyDown="TextBox_No_Spaces_Allowed"/>

                    </Grid>
                    <Grid Margin="2,0,2,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition MinHeight="15"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.RowSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="1" Grid.Row="0" Style="{StaticResource HomagePropertyTitleText}" Text="Enchanted" MinWidth="162" TextAlignment="Left" VerticalAlignment="Bottom" Margin="4,0,0,2"/>
                            <ToggleButton Grid.Column="0" Grid.Row="0" x:Name="Skill_Details_Property_Toggle_Is_Enchanted" Style="{StaticResource HomageToggleButton}" HorizontalAlignment="Center" VerticalAlignment="Bottom" IsChecked="{Binding Skill_Is_Enchanted, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Click="Skill_Is_Enchanted_Clicked" Margin="0,0,0,0"/>
                        </Grid>

                        <TextBlock Grid.Column="1" Style="{StaticResource HomagePropertyTitleText}" MinWidth="80" Margin="4,2,2,0" Text="Enchanted Skill ID"/>
                        <TextBox Grid.Column="1" Grid.Row="1" x:Name="Skill_Details_Property_Enchanted_Skill_ID" Style="{StaticResource HomagePropertyTextBox}"  Margin="2,0,2,0" MinWidth="87" IsReadOnly="True" Text="{Binding Skill_Enchanted_Skill_ID, Mode=OneWay}" IsEnabled="{Binding IsChecked, ElementName=Skill_Details_Property_Toggle_Is_Enchanted}" />

                    </Grid>
                    <Grid Margin="2,0,2,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition MinHeight="15"/>
                        </Grid.RowDefinitions>
                        
                        <Grid Grid.Column="0" Grid.RowSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="1" Grid.Row="0" Style="{StaticResource HomagePropertyTitleText}" Text="Attribute" MinWidth="162" TextAlignment="Left" VerticalAlignment="Bottom" Margin="4,0,0,2"/>
                            <ToggleButton Grid.Column="0" Grid.Row="0" x:Name="Skill_Details_Property_Toggle_Is_Attribute" Style="{StaticResource HomageToggleButton}" HorizontalAlignment="Center" VerticalAlignment="Bottom" IsChecked="{Binding Skill_Is_Attribute}" Margin="0,0,0,0" Click="Skill_Is_Attribute_Clicked"/>
                        </Grid>
                        
                        <TextBlock Grid.Column="1" Style="{StaticResource HomagePropertyTitleText}" MinWidth="80" Margin="4,2,2,0" Text="Type"/>
                        <ComboBox Grid.Column="1" Grid.Row="11" x:Name="Skill_Details_Property_Attribute" Margin="2,0,2,0" Style="{DynamicResource HomageDropdownBoxStyle}" Background="#4f4f4f" SelectedIndex="{Binding Skill_Attribute_Type}" Height="15" FontSize="10" FontFamily="Lucida Console" BorderThickness="0" IsEnabled="{Binding IsChecked, ElementName=Skill_Details_Property_Toggle_Is_Attribute}">

                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="{x:Type ComboBoxItem}">
                                    <Setter Property="Background" Value="#2f2f2f"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                            <ComboBox.Items>
                                <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="None"/>
                                <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="Fire"/>
                                <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="Water"/>
                                <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="Wind"/>
                                <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="Earth"/>
                                <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="Holy"/>
                                <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="Unholy"/>
                            </ComboBox.Items>
                        </ComboBox>
                        <TextBlock  Grid.Column="2"  Style="{StaticResource HomagePropertyTitleText}" Margin="4,2,0,0" MinWidth="92" Text="Value"/>
                        <TextBox    Grid.Column="2" Grid.Row="1"  x:Name="NPC_Details_Property_Offense_Attribute_Percent" Style="{StaticResource HomagePropertyTextBox}" Margin="1,0,0,0" MinWidth="92" Text="{Binding Skill_Attribute_Value, UpdateSourceTrigger=LostFocus}" PreviewTextInput="Validate_Integer_Input" PreviewKeyDown="TextBox_No_Spaces_Allowed" IsEnabled="{Binding IsChecked, ElementName=Skill_Details_Property_Toggle_Is_Attribute}"/>
                    </Grid>

                    <Grid Margin="2,4,2,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
