                <ToggleButton Grid.Row="8" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" FontSize="10" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click= "Armor_BodyPart_Click"  Tag="rear;lear" >Earring</ToggleButton>
                <ToggleButton Grid.Row="9" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" FontSize="10" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click= "Armor_BodyPart_Click" Tag="gloves" >Gloves</ToggleButton>
                <ToggleButton Grid.Row="10" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" FontSize="10" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="Armor_BodyPart_Click" Tag="hair2" >Hair (Top)</ToggleButton>
                <ToggleButton Grid.Row="11" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" FontSize="10" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="Armor_BodyPart_Click" Tag="hair" >Hair (Bottom)</ToggleButton>
                <ToggleButton Grid.Row="12" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" FontSize="10" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="Armor_BodyPart_Click" Tag="hairall" >Hair (2 Slots)</ToggleButton>
