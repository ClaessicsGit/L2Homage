                <ToggleButton x:Name="Subtype_Armor_SubType_All_Toggle" Grid.Row="1" Grid.Column="1" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" FontSize="10" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="Armor_SubType_Click" Tag="all"  IsChecked="True">All</ToggleButton>
                <ToggleButton Grid.Row="2" Grid.Column="1" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" FontSize="10" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="Armor_SubType_Click" Tag="2">Heavy</ToggleButton>
                <ToggleButton Grid.Row="3" Grid.Column="1" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" FontSize="10" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="Armor_SubType_Click" Tag="1">Light</ToggleButton>
                <ToggleButton Grid.Row="4" Grid.Column="1" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" FontSize="10" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="Armor_SubType_Click" Tag="3">Magic</ToggleButton>
