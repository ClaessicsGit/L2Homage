                        <TextBox x:Name="Set_Details_Property_Name" Style="{StaticResource HomagePropertyTextBox}"  Margin="0,0,2,0" PreviewTextInput="Validate_Any_Case_Input"/>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="1" Focusable="False" Margin="2,0,0,0">
                        <TextBlock Style="{StaticResource HomagePropertyTitleText}" Text="Set ID" Margin="2,4,2,0"/>
