<Page x:Class="L2Homage.Pages.ItemsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:L2Homage"
      mc:Ignorable="d" 
      d:DesignHeight="850" d:DesignWidth="1220"
      Title="ItemsPage"
      KeepAlive="True">

    <Page.Resources>
        <Style x:Key="LoadedText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="10, 1, 0, 1"/>
            <Setter Property="Foreground" Value="#F2F2F2"/>
            <Setter Property="FontFamily" Value="Lucida Console"/>
        </Style>
    </Page.Resources>


    <Grid x:Name="ItemsPage_Main_Grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="1" Grid.Column="0" Margin="0" Width="130" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Lucida Console" Foreground="#F2F2F2" FontSize="14" Focusable="False">Search</TextBlock>
        <TextBlock x:Name="SubTypeTitle" Grid.Row="1" Grid.Column="2" Margin="0" Width="130" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Lucida Console" Foreground="#F2F2F2" FontSize="14" Focusable="False">Details</TextBlock>
        <TextBlock Grid.Row="1" Grid.Column="1" Margin="0" Width="130" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Lucida Console" Foreground="#F2F2F2" FontSize="14" Focusable="False">Name</TextBlock>
        

        <Button x:Name="SearchIsShowingButton" Grid.Column="2" Grid.Row="1" Width="100" HorizontalAlignment="Left" Style="{StaticResource HomageButtonStyle}" Height="20" Content="Hide Search" Click="ToggleSearchVisibility"></Button>

        <Grid Grid.Row="2" Grid.Column="0" Loaded="Item_Force_Select_Waiting">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="125"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Vertical" Grid.Row="0">
                <StackPanel Orientation="Horizontal" Margin="0,4,0,4">
                    <TextBlock Text="ID" Width="90" Style="{StaticResource HomageLoadedText}" Margin="10,4,4,4" TextAlignment="Left" VerticalAlignment="Center"/>
                    <TextBox x:Name="Item_Filter_ID" Width="106" HorizontalAlignment="Right" Style="{StaticResource HomageTextBox}" TextAlignment="Left" VerticalContentAlignment="Center" Padding="2,-2,0,0" Text="" TextChanged="Item_Filter_Name_TextChanged"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4,0,4">
                    <TextBlock Text="Name" Width="90" Style="{StaticResource HomageLoadedText}" Margin="10,4,4,4" TextAlignment="Left" VerticalAlignment="Center"/>
                    <TextBox x:Name="Item_Filter_Name" Width="106" HorizontalAlignment="Right" Style="{StaticResource HomageTextBox}" TextAlignment="Left" VerticalContentAlignment="Center" Padding="2,-2,0,0" Text="" TextChanged="Item_Filter_Name_TextChanged"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4,0,4">
                    <TextBlock Text="Grade" Width="90" Style="{StaticResource HomageLoadedText}" Margin="10,4,4,4" TextAlignment="Left" VerticalAlignment="Center"/>
                    <ComboBox x:Name="Filter_Grade" Width="106" Style="{DynamicResource HomageDropdownBoxStyle}" Background="#4f4f4f" SelectedIndex="9" BorderThickness="0" SelectionChanged="Item_Filter_Grade_Changed">

                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ComboBoxItem}">
                                <Setter Property="Background" Value="#2f2f2f"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                        <ComboBox.Items>
                            <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="None"/>
                            <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="D"/>
                            <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="C"/>
                            <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="B"/>
                            <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="A"/>
                            <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="S"/>
                            <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="S80"/>
                            <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="S84"/>
                            <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="Event"/>
                            <ComboBoxItem Style="{StaticResource HomageComboBoxItemStyle}" Content="All"/>
                        </ComboBox.Items>
                    </ComboBox>

                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,4,0,4">
                    <TextBlock Text="Only Custom" Width="120" Style="{StaticResource HomageLoadedText}" Margin="10,4,4,4" TextAlignment="Left" VerticalAlignment="Center"/>
                    <ToggleButton x:Name="Item_Filter_Custom_Toggle" Style="{StaticResource HomageToggleButton}" Margin="60,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Right" Click="Item_Filter_Custom_Toggle_Clicked"/>

                </StackPanel>
            </StackPanel>

            <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,4,0,4" Width="130" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Lucida Console" Foreground="#F2F2F2" FontSize="14" Focusable="False">Type</TextBlock>


            <Grid Grid.Row="2" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="25"/>
                </Grid.RowDefinitions>

                <ToggleButton x:Name="Item_Type_All_Button" Grid.Row="0" Height="20" Margin="10,0,10,2" Style="{StaticResource HomageToggleFilterButton}" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" TextBlock.TextAlignment="Center" Tag="All" Click="Item_Type_Click" IsChecked="True">All</ToggleButton>
                <ToggleButton x:Name="Item_Type_Weapons_Button" Grid.Row="1" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Tag="Weapons" Click="Item_Type_Click">Weapons</ToggleButton>
                <ToggleButton x:Name="Item_Type_Armors_Button" Grid.Row="2" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Tag="Armors" Click="Item_Type_Click">Armors</ToggleButton>
                <ToggleButton x:Name="Item_Type_Etcs_Button" Grid.Row="3" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Tag="Etcs" Click="Item_Type_Click">Etcs</ToggleButton>
                <ToggleButton x:Name="Item_Type_Sets_Button" Grid.Row="4" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Tag="Sets" Click="Item_Type_Click">Sets</ToggleButton>
                



            </Grid>



            <Grid x:Name="Filter_Weapon_Subtypes_Grid" Grid.Row="4" Visibility="Hidden">
