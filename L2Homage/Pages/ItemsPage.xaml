                <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,4,0,4" Width="130" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Lucida Console" Foreground="#F2F2F2" FontSize="12" Focusable="False">Weapon Type</TextBlock>

                <ToggleButton x:Name="Subtype_Weapon_All_Toggle" Grid.Row="1" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="Weapon_SubType_Click" Tag="all" IsChecked="True">All</ToggleButton>
                <ToggleButton Grid.Row="2" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="Weapon_SubType_Click" Tag="13">Ancient Sword</ToggleButton>
                <ToggleButton Grid.Row="3" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="Weapon_SubType_Click" Tag="2">Blunt</ToggleButton>
                <ToggleButton Grid.Row="4" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="Weapon_SubType_Click" Tag="6">Bow</ToggleButton>
                <ToggleButton Grid.Row="5" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="Weapon_SubType_Click" Tag="12">Crossbow</ToggleButton>
                <ToggleButton Grid.Row="6" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="Weapon_SubType_Click" Tag="3">Dagger</ToggleButton>
                <ToggleButton Grid.Row="7" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="Weapon_SubType_Click" Tag="8">Duals</ToggleButton>
                <ToggleButton Grid.Row="8" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="Weapon_SubType_Click" Tag="15">Dynasty</ToggleButton>
                <ToggleButton Grid.Row="9" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="Weapon_SubType_Click" Tag="10">Fishing Rod</ToggleButton>
                <ToggleButton Grid.Row="10" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="Weapon_SubType_Click" Tag="5">Fist</ToggleButton>
                <ToggleButton Grid.Row="11" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="Weapon_SubType_Click" Tag="4">Polearm</ToggleButton>
                <ToggleButton Grid.Row="12" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="Weapon_SubType_Click" Tag="11">Rapier</ToggleButton>
                <ToggleButton Grid.Row="13" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="Weapon_SubType_Click" Tag="0">Shield</ToggleButton>
                <ToggleButton Grid.Row="14" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="Weapon_SubType_Click" Tag="7">Spellbook</ToggleButton>
                <ToggleButton Grid.Row="15" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click="Weapon_SubType_Click" Tag="1">Sword</ToggleButton>
            </Grid>
            <Grid x:Name="Filter_Armor_Subtypes_Grid" Grid.Row="4" Visibility="Hidden">
