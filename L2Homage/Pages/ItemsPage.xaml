                    </StackPanel>

                    <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1" Focusable="False" Margin="2,0,0,0">
                        <TextBlock Style="{StaticResource HomagePropertyTitleText}" Text="Template" Margin="2,4,2,0"/>
                        <TextBox x:Name="Set_Details_Property_Template" Style="{StaticResource HomagePropertyTextBox}"  Margin="0,0,2,0" IsReadOnly="True"/>
