                <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,4,0,4" Width="130" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Lucida Console" Foreground="#F2F2F2" FontSize="12" Focusable="False">Body Part</TextBlock>
                <TextBlock Grid.Row="0" Grid.Column="1" Margin="0,4,0,4" Width="130" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Lucida Console" Foreground="#F2F2F2" FontSize="12" Focusable="False">Armor Type</TextBlock>


                <ToggleButton x:Name="Subtype_Armor_BodyPart_All_Toggle" Grid.Row="1" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" FontSize="10" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click= "Armor_BodyPart_Click"  Tag="all" IsChecked="True" >All</ToggleButton>
                <ToggleButton Grid.Row="2" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" FontSize="10" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click= "Armor_BodyPart_Click"  Tag="bracelet" >Bracer</ToggleButton>
                <ToggleButton Grid.Row="3" Height="20" Margin="10,2,10,2" Style="{StaticResource HomageToggleFilterButton}" FontSize="10" HorizontalAlignment="Stretch" VerticalContentAlignment="Center" Click= "Armor_BodyPart_Click"  Tag="waist" >Belt</ToggleButton>
